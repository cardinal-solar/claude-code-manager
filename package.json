{
  "name": "claude-task-runner",
  "version": "0.1.0",
  "description": "Node.js library for managing Claude Code processes with single-shot, loop execution, and background job polling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp -r src/skills/templates dist/skills/templates",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run test:run && npm run build",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "automation",
    "ralph",
    "llm",
    "code-generation",
    "task-automation",
    "job-scheduler",
    "background-jobs",
    "polling"
  ],
  "author": "Federico Costa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cardinal-solar/claude-code-manager.git"
  },
  "homepage": "https://github.com/cardinal-solar/claude-code-manager#readme",
  "bugs": {
    "url": "https://github.com/cardinal-solar/claude-code-manager/issues"
  },
  "dependencies": {
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.31",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-code": ">=0.5.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/claude-code": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
